{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./lib",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    /*
     * For debugging code with Karma.
     */
    "sourceMap": true
  },
  "include": ["src"]
}
